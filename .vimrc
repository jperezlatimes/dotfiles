" colorscheme badwolf

" Text rendering
syntax on
set wrap

" Set tabs size and convert tabs to spaces
set tabstop=2
set softtabstop=2
set expandtab
set smarttab
set shiftwidth=2

" UI settings
set number
set numberwidth=5
set showcmd
set showmatch
set hlsearch

" Code folding
set foldenable
set foldmethod=syntax
